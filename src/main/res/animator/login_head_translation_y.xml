<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    <!-- move up -->
    <set>
        <objectAnimator
            android:propertyName="scaleX"
            android:valueFrom="0"
            android:valueTo="1.0"
            android:duration="0" />
        <objectAnimator
            android:propertyName="scaleY"
            android:valueFrom="0"
            android:valueTo="1.0"
            android:duration="0" />
        <objectAnimator
            android:propertyName="translateY"
            android:valueFrom="133"
            android:valueTo="30"
            android:duration="500" />
    </set>
    <!-- move down -->
    <objectAnimator
        android:propertyName="translateY"
        android:valueFrom="30"
        android:valueTo="63"
        android:startOffset="70"
        android:duration="500" />
</set>


