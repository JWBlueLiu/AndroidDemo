<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="@string/scale_x"
        android:valueFrom="@dimen/usage_terms_circle_scale1"
        android:valueTo="@dimen/usage_terms_circle_scale2"
        android:duration="@integer/usage_terms_circle_scale_duration"
        android:interpolator="@android:interpolator/fast_out_slow_in" />
    <objectAnimator
        android:propertyName="@string/scale_y"
        android:valueFrom="@dimen/usage_terms_circle_scale1"
        android:valueTo="@dimen/usage_terms_circle_scale2"
        android:duration="@integer/usage_terms_circle_scale_duration"
        android:interpolator="@android:interpolator/fast_out_slow_in" />
</set>
